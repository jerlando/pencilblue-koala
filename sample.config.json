{
    "CAN_BE_REMOVED": "For all of the available properties that can be modified look at the include/config.js file.  It also documents all of the different options.",
	"siteName": "My PencilBlue Site",
	"siteRoot": "http://localhost:8080",
	"siteIP":   "localhost",
	"sitePort": 8080,
	"log_level": "info",
	"db": {
        "type":"mongo",
		"servers": [
          "mongodb://127.0.0.1:27017/"
        ],
        "name": "pencilblue",
        "writeConcern": 1
	},
	"cache": {
		"fake": true,
		"host": "localhost",
		"port": 6379
	},
	"settings": {
		"use_memory": true,
		"use_cache": false
	},
	"templates": {
		"use_memory": true,
		"use_cache": false
	},
	"plugins": {
		"caching": {
			"use_memory": true,
			"use_cache": false
		}
	}
}
